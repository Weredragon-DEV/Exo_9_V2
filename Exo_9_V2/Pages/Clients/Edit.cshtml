@page "{id:int}"
@model Exo_9_V2.Pages.Clients.EditModel

<h2>Modifier un Client</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Client.Nom"></label>
        <input asp-for="Client.Nom" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Client.Telephone"></label>
        <input asp-for="Client.Telephone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Client.Courriel"></label>
        <input asp-for="Client.Courriel" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Sauvegarder</button>
    <a asp-page="./Index" class="btn btn-secondary">Annuler</a>
</form>