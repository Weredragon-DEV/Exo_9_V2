@page "{id:int}"
@model Exo_9_V2.Pages.Voitures.EditModel

<h2>Modifier une Voiture</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Voiture.Marque"></label>
        <input asp-for="Voiture.Marque" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Voiture.Modele"></label>
        <input asp-for="Voiture.Modele" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Voiture.Annee"></label>
        <input asp-for="Voiture.Annee" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Voiture.ClientId">Client</label>
        <select asp-for="Voiture.ClientId" class="form-control" asp-items="Model.ClientsList"></select>
    </div>

    <button type="submit" class="btn btn-primary">Sauvegarder</button>
    <a asp-page="./Index" class="btn btn-secondary">Annuler</a>
</form>